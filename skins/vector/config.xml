<?xml version="1.0"?>
<skin version="1.0">
	<info>
		<uid>vector@shopdev.co.uk</uid>
		<type>skin</type>
		<name><![CDATA[vector]]></name>
		<display><![CDATA[Vector]]></display>
		<version>1.1</version>
		<minVersion>5.0.0a</minVersion>
		<maxVersion>5.0.*</maxVersion>
		<fusion>2.0</fusion>
		<creator>ShopDev</creator>
		<homepage>http://www.shopdev.co.uk</homepage>
  	</info>

	<styles>
		<style images="true" default="true">
			<!-- images: TRUE tells the template system that this style has its own image folder. FALSE would use the contents in the root of the images folder -->
			<directory>chrome</directory>
			<name><![CDATA[Chrome]]></name>
			<description><![CDATA[Default chrome style]]></description>
			<default />
		</style>
		<style images="true">
			<directory>dark</directory>
			<name><![CDATA[Dark]]></name>
			<description><![CDATA[Default dark style]]></description>
		</style>
		<style images="true">
			<directory>red</directory>
			<name><![CDATA[Red]]></name>
			<description><![CDATA[Default red style]]></description>
		</style>
		<style images="true">
			<directory>blue</directory>
			<name><![CDATA[Blue]]></name>
			<description><![CDATA[Default blue style]]></description>
		</style>
		<style images="true">
			<directory>green</directory>
			<name><![CDATA[Green]]></name>
			<description><![CDATA[Default green style]]></description>
		</style>
		<style images="true">
			<directory>yellow</directory>
			<name><![CDATA[Yellow]]></name>
			<description><![CDATA[Default yellow style]]></description>
		</style>
		<style images="true">
			<directory>orange</directory>
			<name><![CDATA[Orange]]></name>
			<description><![CDATA[Default orange style]]></description>
		</style>
		<style images="true">
			<directory>violet</directory>
			<name><![CDATA[Violet]]></name>
			<description><![CDATA[Default violet style]]></description>
		</style>
	</styles>
  
  	<images>
		<!-- Common -->
		<image reference="thumbnail" maximum="100" quality="100" default="noimage_thumbnail.png" />
		
		<!-- Category Page -->
		<image reference="category" maximum="150" quality="100" default="" /><!-- Doesnt need a default -->
		<image reference="subcategory" maximum="100" quality="100" default="noimage_thumbnail.png" />
		
		<!-- Product Page -->
		<image reference="gallery" maximum="50" quality="100" default="noimage_gallery.png" />
		<image reference="normal" maximum="300" quality="100" default="noimage_normal.png" />
		<image reference="enlarge" maximum="600" quality="100" default="" /><!-- Doesnt need a default -->
		
		<!-- These are the ones currently in use -->
		<image reference="small" maximum="150" quality="100" default="noimage_thumbnail.png" />
		<image reference="medium" maximum="300" quality="100" default="noimage_normal.png" />
		<image reference="large" maximum="600" quality="100" default="" /><!-- Doesnt need a default -->
  	</images>

	<custom>
		<!-- Fusion uses the Fusion Framework -->
	</custom>
</skin>